# Frontend Environment Configuration
# Copy this file to .env.local for development or set these variables in your deployment platform

# Backend API URL
REACT_APP_BACKEND_URL=http://localhost:5000

# For production, update this to your deployed backend URL
# Example: REACT_APP_BACKEND_URL=https://addis-software-backend.onrender.com

# Socket.IO Configuration
REACT_APP_SOCKET_URL=http://localhost:5000

# For production, update this to your deployed backend URL
# Example: REACT_APP_SOCKET_URL=https://addis-software-backend.onrender.com

# Build Configuration
GENERATE_SOURCEMAP=false

# Public URL (for deployment platforms like Render)
# REACT_APP_PUBLIC_URL=https://addis-software-frontend.onrender.com
